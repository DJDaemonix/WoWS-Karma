@page "/"
@inject PageContentLoader Loader

@markup

@code {
	static string ContentFilePath = System.IO.Path.Join(PageContentLoader.WebRootPageContentsPath, "indexcontent.html");
	private MarkupString markup;

	protected override async Task OnInitializedAsync()
	{
		markup = await Loader.LoadMarkupAsync(ContentFilePath);
		await base.OnInitializedAsync();
	}
}